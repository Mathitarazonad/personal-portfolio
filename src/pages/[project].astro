---
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';
export function getStaticPaths() {
  return [
    {params: {project: 'employer-infojobs'}},
    {params: {project: 'weather-app'}},
    {params: {project: 'word-quiz'}},
    {params: {project: 'age-calculator'}},
  ]
}

interface Project {
  id: string
  name: string
  description: string
  technologies: string[]
  mobileImage: string
  desktopImage: string
  repositoryURL: string
  liveURL: string
}

const projects: Project[] = [
  {
    id: 'employer-infojobs',
    name: 'Employer InfoJobs',
    description: "This is an application for InfoJob's Hackathon made in June 2023. The application is based on the InfoJob's web application but pretended for recruiter or employers who are searching for employees for their companies or business. Although the application is designed for employers, people can also create their profiles to be hired for employers.",
    technologies: ['Next', 'TypeScript', 'Next', 'Firebase'],
    mobileImage: 'recruiter-infojobs-mobile.webp',
    desktopImage: 'recruiter-infojobs-desktop.webp',
    repositoryURL: 'https://github.com/Mathitarazonad/Infojobs-hackaton',
    liveURL: 'https://infojobs-hackaton-app-mt.vercel.app/'
  },
  {
    id: 'weather-app',
    name: 'Weather App',
    description: 'This is a weather application that allows users to check real-time weather information for any location. The application fetches data from OpenWeatherMap API such as temperature, humidity, wind speed, and so on. Users can search for weather details by entering the name of any city or just with its current position using native Geolocation API.',
    technologies: ['React', 'Express', 'Sass', 'Redux QTK'],
    mobileImage: 'weather-app-mobile.webp',
    desktopImage: 'weather-app-desktop.webp',
    repositoryURL: 'https://github.com/Mathitarazonad/weather-app',
    liveURL: 'https://weather-appmt.vercel.app/'
  },
  {
    id: 'word-quiz',
    name: 'Word Quiz',
    description: "This application is game that is based on Wordle's game, and it has 10 levels, each with easy, normal and hard difficulties. Users needs to guess all the words in the 3 different difficulties in each level, in order to unlock the next one, and each level consists on a specific topic to give the user a context of which type of words they are guessing. Also in each level users have some abilities to use if they want that must be purchased with coins that are obtained by guessing word, completing difficulties and unlocking new levels.",
    technologies: ['Next', 'Tailwind', 'Firebase'],
    mobileImage: 'word-quiz-mobile.webp',
    desktopImage: 'word-quiz-desktop.webp',
    repositoryURL: 'https://github.com/Mathitarazonad/next-quiz-app',
    liveURL: 'https://next-quiz-app-mathitarazonad.vercel.app/'
  },
  {
    id: 'age-calculator',
    name: 'Age Calculator',
    description: 'The application consists of a simple age calculator that allows you to calculate the dates that have passed from a date to the current. Also users are not limited just to calculate how many years, months or days have passed, but see the time that has passed with more specific information like, seconds, days, hours, weeks, and so on. The calculator have some special validations to make sure that users not enter invalid entries like, invalid dates (march 32), future dates, zero dates, etc.',
    technologies: ['Svelte', 'TypeScript', 'Tailwind'],
    mobileImage: 'age-calculator-mobile.webp',
    desktopImage: '/age-calculator-desktop.webp',
    repositoryURL: 'https://github.com/Mathitarazonad/svelte-age-calculator',
    liveURL: 'https://svelte-age-calculator.vercel.app/'
  },
]

const {project: projectId} = Astro.params
const currentProject = projects.find(project => project.id === projectId) as Project

const descParagraphs = currentProject.description.split(/(?<=\.)\s/)
---

<Layout title={currentProject.name}>
  <Header />
  <div class='project'>
    <section class='project-img'>
      <img class='desktop-img' src={currentProject.desktopImage} />
      <div class='project-urls-icons'>
        <div class='project-icon'>
          <a target='_blank' href={currentProject.repositoryURL}>
            <svg width="52" height="52" viewBox="0 0 34 32" fill="none" xmlns="http://www.w3.org/2000/svg">
